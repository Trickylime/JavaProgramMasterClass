<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javamasterclass.mycontacts.DialogController">

    <headerText>
        Enter your new contacts details:
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Second Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="secondNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="notesAreaField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

</DialogPane>